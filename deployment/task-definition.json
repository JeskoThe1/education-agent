{
    "family": "education-analyzer",
    "networkMode": "awsvpc",
    "containerDefinitions": [
      {
        "name": "frontend",
        "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/education-analyzer-frontend:latest",
        "portMappings": [
          {
            "containerPort": 8501,
            "hostPort": 8501,
            "protocol": "tcp"
          }
        ],
        "essential": true,
        "environment": [
          {
            "name": "API_URL",
            "value": "http://localhost:8000"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/education-analyzer",
            "awslogs-region": "${AWS_REGION}",
            "awslogs-stream-prefix": "frontend"
          }
        }
      },
      {
        "name": "api",
        "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/education-analyzer-api:latest",
        "portMappings": [
          {
            "containerPort": 8000,
            "hostPort": 8000,
            "protocol": "tcp"
          }
        ],
        "essential": true,
        "environment": [
          {
            "name": "BACKEND_URL",
            "value": "http://localhost:5000"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/education-analyzer",
            "awslogs-region": "${AWS_REGION}",
            "awslogs-stream-prefix": "api"
          }
        }
      },
      {
        "name": "backend",
        "image": "${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/education-analyzer-backend:latest",
        "portMappings": [
          {
            "containerPort": 5000,
            "hostPort": 5000,
            "protocol": "tcp"
          }
        ],
        "essential": true,
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/education-analyzer",
            "awslogs-region": "${AWS_REGION}",
            "awslogs-stream-prefix": "backend"
          }
        }
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "executionRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::${AWS_ACCOUNT_ID}:role/ecsTaskRole"
}